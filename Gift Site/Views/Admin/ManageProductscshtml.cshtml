@model IEnumerable<Gift_Site.Models.Product>

<h2>Manage Products</h2>
<a asp-action="AddProduct">Add New Product</a>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Rate</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.Rate</td>
                <td>@product.Quantity</td>
                <td>
                    <a asp-action="DeleteProduct" asp-route-id="@product.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
