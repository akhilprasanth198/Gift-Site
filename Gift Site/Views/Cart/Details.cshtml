@model List<Gift_Site.Models.CartItem>

<h1>Shopping Cart</h1>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Shop Now</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.ProductId" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total Amount: @Model.Sum(x => x.Quantity * x.Price)</h3>
    <a asp-action="Checkout" class="btn btn-success">Checkout</a>
}
